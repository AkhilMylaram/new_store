{
  "name": "icecream-store-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "dev:no-turbo": "next dev",
    "build": "next build",
    "build:clean": "rm -rf .next && next build",
    "build:no-lint": "next build --no-lint",
    "start": "next start",
    "start:prod": "next start -p 3000",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "check-images": "node -e \"const fs=require('fs');const path=require('path');const images=['hero-icecream.jpg','vanilla.jpg','chocolate.jpg','strawberry.jpg','mint.jpg','caramel.jpg','cookies.jpg','pistachio.jpg','mango.jpg'];const missing=images.filter(img=>!fs.existsSync(path.join('public','images',img)));if(missing.length){console.log('❌ Missing images:',missing.join(', '));console.log('Run: npm run placeholders');}else{console.log('✅ All images present');}\"",
    "placeholders": "node scripts/create-browser-placeholders.js",
    "gen-images": "echo \"See scripts/generate-images.md for AI prompts\"",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev"
  },
  "dependencies": {
    "next": "^14.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.5.0",
    "@tanstack/react-query": "^4.36.0",
    "zod": "^3.23.0",
    "framer-motion": "^11.0.0",
    "react-toastify": "^10.0.5",
    "classnames": "^2.5.0"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.38",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "eslint-config-next": "^14.2.0"
  }
}